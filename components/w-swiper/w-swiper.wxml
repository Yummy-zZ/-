<!--components/w-swiper/w-swiper.wxml-->
<swiper indicator-dots='true' 
        indicator-active-color='#d43c33'
        autoplay='true'
        circular='true'
        interval='3000'
        class='swiper'
        duration="500">
  <block wx:for="{{images}}" wx:key="index">
    <swiper-item>
      <image class="swiper-image" src="{{item.pic}}" mode='widthFix'/>
    </swiper-item>
  </block>
</swiper>
